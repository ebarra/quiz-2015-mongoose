<form id="search_form" action="/quizes" method="get">
  <input type="text" name="search" placeholder="texto a buscar" value="<%=search_text ? search_text:""%>">
  <input type="submit" value="Buscar">
</form>
<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>        
    <tr>
      <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <%if(session.user) {
         if (session.user.isAdmin || session.user.id === quizes[i].UserId) {%>
        <td><a href="/quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
        <td>
          <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
              borrar
            </button>
          </form>
        </td>
        <%}
      }%>
    </tr> 
  <% } %>
</table>
<%if(quizes.length===0){%>
<p>No se han encontrado preguntas.</p>

<%}%>
<p/>
<%if(session.user){%>
  <a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>